@model EditBankAccountViewModel

@{
    ViewData["Title"] = "Изменение валюты счета";
}

<div class="text-center mb-5">
    <h3>Конвертация валюты</h3>
</div>

<form asp-action="Edit">
    <div class="row">
    <div class="col-12">
        <div class="table-responsive text-center">
            <table class="table">
                    <thead>
                    <tr>
                        <th>Номер счета</th>
                        <th>Текущий баланс</th>
                        <th>Текущая валюта</th>
                        <th>Новая валюта</th>
                    </tr>
                    </thead>
                    <tbody>
                    <tr>
                        <td>@Model.IdAccount</td>
                        <td>@Model.CurrentAmount</td>
                        <td>@Model.CurrentCurrencyName</td>
                        <td>
                            <select class="form-control" asp-for="TargetCurrencyId">
                                @foreach (var currency in Model.CurrencyList)
                                {
                                    <option value="@currency.IdCurrency">@currency.ShortName</option>
                                }
                            </select>
                        </td>
                    </tr>
                    </tbody>
                </table>
        </div>
    </div>
    </div>

    <div class="form-group text-center mt-5">
        <a class="btn btn-secondary mr-3" asp-controller="BankAccount" asp-action="GetAccounts">Вернуться к списку</a>
        <input type="submit" value="Изменить" class="btn btn-orange"/>
    </div>
</form>