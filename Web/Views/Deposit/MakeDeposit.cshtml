@model MakeDepositViewModel

@{
    ViewData["Title"] = "Оформление депозита";
}

<div>
    <form class="p-5 border border-orange rounded" asp-action="MakeDeposit" method="post">
        <div class="text-center mb-4">
            <h3>Оформление депозита</h3>
        </div>
        
        <div asp-validation-summary="All" style="color: red;"></div>

        <input asp-for="IdClient" value="@Model.IdClient" type="hidden" />

        <div id="main_form" class="d-flex justify-content-center">
            <div id="left_column" class="p-4 mr-5 border border-orange rounded" style="width: 70%;">

                <!--Select bank account-->
                <div>
                    <label asp-for="Deposit.IdAccount">Депозитный счёт </label>

                    <select class="form-control" asp-for="Deposit.IdAccount">
                        @foreach (var account in Model.BankAccounts)
                        {
                            <option value="@account.IdAccount">@account.IdAccount</option>
                        }
                    </select>
                </div>
                <hr />

                <!--Select amount-->
                <div>
                    <div class="d-flex justify-content-start bd-highlight">
                        <label class="p-2" asp-for="Deposit.Amount">Сумма</label>
                        <p>
                            <input class="form-control" min="50" max="20000" type="text" asp-for="Deposit.Amount" value="50" />
                        </p>
                    </div>
                    <input id="range_deposit_amount" class="slider form-control" type="range" min="1000" max="20000" value="1000">
                </div>

                <hr />

                <!--how long-->
                <div>
                    <div class="d-flex justify-content-start bd-highlight">
                        <label class="p-2" >Срок (дни)</label>
                        <p>
                            <input id="Deposit_TermDeposit" class="p-2 form-control" min="1" max="365" value="1" />
                        </p>
                    </div>

                    <input id="rangeTermDeposit" class="slider form-control" type="range" min="1" max="30" value="1">
                </div>
            </div>

            <!--Final data-->
            <div id="right_column" style="width: 32%;">
                <div id="data_right_column" class="p-4 border border-orange rounded">
                    <div class="d-flex justify-content-center mb-5">
                        <div class="mr-2">
                            <div class="p-2 bd-highlight">Срок до: </div>
                            <div class="p-2 mr-3 bd-highlight">Сумма, грн: </div>
                            <div class="p-2 mr-3 bd-highlight">Проценты, грн: </div>
                            <hr />
                            <div class="p-2 mr-3 bd-highlight">Возврат: </div>
                        </div>

                        <div class="ml-2">
                            <div class="p-2 bd-highlight" id="DateDepositFinish"></div>

                            <input asp-for="Deposit.DateDeposit" type="hidden" />
                            @*<input asp-for="Credit.DateCreditFinish" type="hidden" />*@
                            <input asp-for="Deposit.DateDepositFinish" type="hidden"/>

                            <div class="p-2 bd-highlight" id="display_deposit_Amount">50</div>
                            <div class="p-2 bd-highlight" id="procent_deposit">0.01</div>
                            <hr />
                            <div class="p-2 bd-highlight" id="final_Amount">50.01</div>
                        </div>
                    </div>

                    <!--Submit-->
                    <div class="text-center mt-5 mb-3">
                        <button class="btn btn-orange" type="submit" style="width: 50%">Подтвердить</button>
                    </div>
                </div>
            </div>

        </div>
    </form>
</div>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/js/depositForm.js"></script>

