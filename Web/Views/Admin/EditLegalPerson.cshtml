@model LegalPersonViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Изменение Юр. Лица";
}

<div class="text-center">
    <h4>Изменение данных о клиенте</h4>
    <h4>Юридическое лицо</h4>
</div>
<hr/>
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="EditLegalPerson">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Client.IdClient"/>
            <div class="form-group">
                <label asp-for="Client.Login" class="control-label">Email</label>
                <input asp-for="Client.Login" class="form-control"/>
                <span asp-validation-for="Client.Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Client.Address" class="control-label">Адрес</label>
                <input asp-for="Client.Address" class="form-control"/>
                <span asp-validation-for="Client.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Client.TelNumber" class="control-label">Телефонный номер</label>
                <input asp-for="Client.TelNumber" class="form-control"/>
                <span asp-validation-for="Client.TelNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="LegalPerson.Name" class="control-label">Название</label>
                <input asp-for="LegalPerson.Name" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="LegalPerson.OwnershipType" class="control-label">Тип собственности</label>
                <select asp-for="LegalPerson.OwnershipType" class="form-control">
                    <option value="частная">Частная</option>
                    <option value="государственная">Государственная</option>
                    <option value="муниципальная">Муниципальная</option>

                </select>
            </div>
            <div class="form-group">
                <label asp-for="LegalPerson.Director" class="control-label">Директор</label>
                <input asp-for="LegalPerson.Director" class="form-control"/>
            </div>
            <div class="form-group text-center">
                <a asp-action="Index" class="btn btn-secondary mr-3">Вернуться к списку</a>
                <a class="btn btn-secondary mr-3" asp-action="ChangePassword" asp-route-email="@Model.Client.Login">Сменить пароль</a>
                <input type="submit" value="Изменить" class="btn btn-orange"/>
            </div>
        </form>
    </div>
</div>

