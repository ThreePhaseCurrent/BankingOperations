@using Infrastructure.Identity
@model PhysicalPersonViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Добавление нового Физ. Лица";
}

<div class="text-center">
    <h4>Добавление учетной записи физического лица</h4>
</div>
<hr/>
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="CreatePhysicalPerson">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Client.Login" class="control-label">Email</label>
                <input asp-for="Client.Login" class="form-control" readonly="readonly"/>
            </div>
            <div class="form-group">
                <label asp-for="Client.Address" class="control-label">Адрес</label>
                <input asp-for="Client.Address" class="form-control" readonly="readonly"/>
            </div>
            <div class="form-group">
                <label asp-for="Client.TelNumber" class="control-label">Телефонный номер</label>
                <input asp-for="Client.TelNumber" class="form-control" readonly="readonly"/>
            </div>
            <div class="form-group">
                <label asp-for="PhysicalPerson.PassportSeries" class="control-label">Серия паспорта</label>
                <input asp-for="PhysicalPerson.PassportSeries" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="PhysicalPerson.PassportNumber" class="control-label">Номер паспорта</label>
                <input asp-for="PhysicalPerson.PassportNumber" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="PhysicalPerson.IdentificationNumber" class="control-label">Идентификационный номер</label>
                <input asp-for="PhysicalPerson.IdentificationNumber" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="PhysicalPerson.Name" class="control-label">Имя</label>
                <input asp-for="PhysicalPerson.Name" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="PhysicalPerson.Surname" class="control-label">Фамилия</label>
                <input asp-for="PhysicalPerson.Surname" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="PhysicalPerson.Patronymic" class="control-label">Отчество</label>
                <input asp-for="PhysicalPerson.Patronymic" class="form-control"/>
            </div>
            <div class="form-group text-center">
                <a asp-action="CreateClient" class="btn btn-secondary mr-2">Вернуться назад</a>
                @if (User.IsInRole(AuthorizationConstants.Roles.ADMINISTRATOR))
                {
                    <a asp-action="Index" class="btn btn-secondary mr-2">Вернуться к списку</a>
                }
                <input type="submit" value="Создать" class="btn btn-orange"/>
            </div>
        </form>
    </div>
</div>