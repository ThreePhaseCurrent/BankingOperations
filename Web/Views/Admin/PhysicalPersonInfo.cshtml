@model PhysicalPersonViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Подробнее о пользователе";
}

<div class="text-center">
    <h3>Информация о пользователе</h3>
    <h4>Физическое лицо</h4>
</div>

<hr/>

<div class="row justify-content-center">
    <dt class="col-sm-2">
        Email
    </dt>
    <dd class="col-sm-2">
        @Html.DisplayFor(model => model.Client.Login)
    </dd>
</div>
<div class="row justify-content-center">
    <dt class="col-sm-2">
        Адрес
    </dt>
    <dd class="col-sm-2">
        @Html.DisplayFor(model => model.Client.Address)
    </dd>
</div>
<div class="row justify-content-center">
    <dt class="col-sm-2">
        Телефонный номер
    </dt>
    <dd class="col-sm-2">
        @Html.DisplayFor(model => model.Client.TelNumber)
    </dd>
</div>
<div class="row justify-content-center">
    <dt class="col-sm-2">
        Серия паспорта
    </dt>
    <dd class="col-sm-2">
        @Html.DisplayFor(model => model.PhysicalPerson.PassportSeries)
    </dd>
</div>
<div class="row justify-content-center">
    <dt class="col-sm-2">
        Паспортный номер
    </dt>
    <dd class="col-sm-2">
        @Html.DisplayFor(model => model.PhysicalPerson.PassportNumber)
    </dd>
</div>
<div class="row justify-content-center">
    <dt class="col-sm-2">
        Идентификационный номер
    </dt>
    <dd class="col-sm-2">
        @Html.DisplayFor(model => model.PhysicalPerson.IdentificationNumber)
    </dd>
</div>
<div class="row justify-content-center">
    <dt class="col-sm-2">
        Имя
    </dt>
    <dd class="col-sm-2">
        @Html.DisplayFor(model => model.PhysicalPerson.Name)
    </dd>
</div>
<div class="row justify-content-center">
    <dt class="col-sm-2">
        Фамилия
    </dt>
    <dd class="col-sm-2">
        @Html.DisplayFor(model => model.PhysicalPerson.Surname)
    </dd>
</div>
<div class="row justify-content-center">
    <dt class="col-sm-2">
        Отчество
    </dt>
    <dd class="col-sm-2">
        @Html.DisplayFor(model => model.PhysicalPerson.Patronymic)
    </dd>
</div>
<div class="text-center">
    <a asp-action="Index" class="btn btn-secondary mt-4">Вернуться к списку</a>
</div>