@model ChangePasswordViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Смена пароля";
}

<div class="text-center">
    <h4>Смена пароля</h4>
</div>
<hr/>
<div class="row mr-0 ml-0 justify-content-center">
    <div class="col-md-6">
        <form asp-action="ChangePassword">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="form-control" readonly="readonly"/>
            </div>
            <div class="form-group">
                <label asp-for="OldPassword" class="control-label"></label>
                <input asp-for="OldPassword" class="form-control" type="password"/>
            </div>
            <div class="form-group">
                <label asp-for="NewPassword" class="control-label"></label>
                <input asp-for="NewPassword" class="form-control" type="password"/>
            </div>
            <div class="form-group">
                <label asp-for="ConfirmNewPassword" class="control-label"></label>
                <input asp-for="ConfirmNewPassword" class="form-control" type="password"/>
            </div>
            <div class="form-group text-center">
                <a asp-action="Index" class="btn btn-secondary mr-3">Вернуться к списку</a>
                <input type="submit" value="Сменить" class="btn btn-orange"/>
            </div>
        </form>
    </div>
</div>