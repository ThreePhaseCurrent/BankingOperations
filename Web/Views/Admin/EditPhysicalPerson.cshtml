@model PhysicalPersonViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Изменение Физ. Лица";
}

<div class="text-center">
    <h4>Изменение данных о клиенте</h4>
    <h4>Физическое лицо</h4>
</div>
<hr/>
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="EditPhysicalPerson">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Client.IdClient"/>
            <div class="form-group">
                <label asp-for="Client.Login" class="control-label">Email</label>
                <input asp-for="Client.Login" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="Client.Address" class="control-label">Адрес</label>
                <input asp-for="Client.Address" class="form-control"/>
                <span asp-validation-for="Client.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Client.TelNumber" class="control-label">Телефонный номер</label>
                <input asp-for="Client.TelNumber" class="form-control"/>
                <span asp-validation-for="Client.TelNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhysicalPerson.PassportSeries" class="control-label">Серия паспорта</label>
                <input asp-for="PhysicalPerson.PassportSeries" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="PhysicalPerson.PassportNumber" class="control-label">Паспортный номер</label>
                <input asp-for="PhysicalPerson.PassportNumber" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="PhysicalPerson.IdentificationNumber" class="control-label">Идентификационный номер</label>
                <input asp-for="PhysicalPerson.IdentificationNumber" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="PhysicalPerson.Name" class="control-label">Имя</label>
                <input asp-for="PhysicalPerson.Name" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="PhysicalPerson.Surname" class="control-label">Фамилия</label>
                <input asp-for="PhysicalPerson.Surname" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="PhysicalPerson.Patronymic" class="control-label">Отчество</label>
                <input asp-for="PhysicalPerson.Patronymic" class="form-control"/>
            </div>
            <div class="form-group text-center">
                <a asp-action="Index" class="btn btn-secondary mr-3">Вернуться к списку</a>
                <a class="btn btn-secondary mr-3" asp-action="ChangePassword" asp-route-email="@Model.Client.Login">Сменить пароль</a>
                <input type="submit" value="Изменить" class="btn btn-orange"/>
            </div>
        </form>
    </div>
</div>