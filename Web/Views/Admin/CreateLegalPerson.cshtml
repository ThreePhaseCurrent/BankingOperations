@using Infrastructure.Identity
@model LegalPersonViewModel

@{
    Layout = "_Layout";
    ViewData["Title"] = "Добавление нового Юр. Лица";
}

<div class="text-center">
    <h4>Добавление учетной записи юридического лица</h4>
</div>
<hr/>
<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="CreateLegalPerson">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Client.Login" class="control-label">Email</label>
                <input asp-for="Client.Login" class="form-control" readonly="readonly"/>
            </div>
            <div class="form-group">
                <label asp-for="Client.Address" class="control-label">Адрес</label>
                <input asp-for="Client.Address" class="form-control" readonly="readonly"/>
            </div>
            <div class="form-group">
                <label asp-for="Client.TelNumber" class="control-label">Телефонный номер</label>
                <input asp-for="Client.TelNumber" class="form-control" readonly="readonly"/>
            </div>
            <div class="form-group">
                <label asp-for="LegalPerson.Name" class="control-label">Название</label>
                <input asp-for="LegalPerson.Name" class="form-control"/>
            </div>
            <div class="form-group">
                <label asp-for="LegalPerson.OwnershipType" class="control-label">Тип собственности</label>
                <select asp-for="LegalPerson.OwnershipType" class="form-control">
                    <option value="частная">Частная</option>
                    <option value="государственная">Государственная</option>
                    <option value="муниципальная">Муниципальная</option>

                </select>
            </div>
            <div class="form-group">
                <label asp-for="LegalPerson.Director" class="control-label">ФИО Директора</label>
                <input asp-for="LegalPerson.Director" class="form-control"/>
            </div>
            <div class="form-group text-center">
                <a asp-action="CreateClient" class="btn btn-secondary mr-2">Вернуться назад</a>
                @if (User.IsInRole(AuthorizationConstants.Roles.ADMINISTRATOR))
                {
                    <a asp-action="Index" class="btn btn-secondary mr-2">Вернуться к списку</a>
                }
                <input type="submit" value="Создать" class="btn btn-orange"/>
            </div>
        </form>
    </div>
</div>